%tr
  %td.thumb= image_tag(corvette.image_path)
  %td
    = corvette.name
    = "(#{pluralize(corvette.price, 'ArmadaBuck')})"
    %br
    = truncate(corvette.description, :length => 100)
  %td
    = link_to image_tag('icon_small_add.png'), members_armada_components_path(@armada, :resource_name => 'Corvette', :resource_id => corvette.id), :method => :post
    = link_to 'add to armada', members_armada_components_path(@armada, :resource_name => 'Corvette', :resource_id => corvette.id), :method => :post