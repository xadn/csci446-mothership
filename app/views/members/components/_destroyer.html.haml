    = link_to image_tag('icon_small_add.png'), members_armada_components_path(@armada, :resource_name => 'Destroyer', :resource_id => destroyer.id), :method => :post
    = link_to 'add to armada', members_armada_components_path(@armada, :resource_name => 'Destroyer', :resource_id => destroyer.id), :method => :post
