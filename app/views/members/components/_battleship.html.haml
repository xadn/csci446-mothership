%tr
  %td.thumb= image_tag(battleship.image_path)
  %td
    = battleship.name
    = "(#{pluralize(battleship.cost, 'AdmadaBuck')})"
    %br
    = truncate(battleship.description, :length => 100)
  %td
    = link_to image_tag('icon_small_add.png'), members_armada_components_path(@armada, :resource_name => 'Battleship', :resource_id => battleship.id), :method => :post
    = link_to 'add to armada', members_armada_components_path(@armada, :resource_name => 'Battleship', :resource_id => battleship.id), :method => :post
